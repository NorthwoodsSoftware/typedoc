{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "port": 9229,
            "request": "attach",
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node",
            "sourceMaps": true
        },
        {
            "cwd": "${workspaceRoot}",
            "name": "Debug gojs-internal docs",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
              "--inspect-brk",
              "${workspaceRoot}/bin/typedoc",
              "--options",
              "${workspaceRoot}/../gojs-internal/buildTS/typedoc.json",
              "--tsconfig",
              "${workspaceRoot}/../gojs-internal/buildTS/tsconfig.typedoc.json",
              "--entryPoints",
              "${workspaceRoot}/../gojs-internal/out/all-doc.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          }
    ]
}
